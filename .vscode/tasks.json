{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lint",
            "type": "shell",
            "command": "cargo clippy --fix --allow-dirty -- -W clippy::pedantic",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "format",
            "type": "shell",
            "command": "cargo fmt",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "unit tests",
            "type": "shell",
            "command": "cargo test",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "compile for development",
            "type": "shell",
            "command": "maturin develop",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
